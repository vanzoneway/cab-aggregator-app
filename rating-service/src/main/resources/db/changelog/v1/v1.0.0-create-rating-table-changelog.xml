<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1"
               author="vanz">
        <createTable tableName="driver_rating">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_driverrating"/>
            </column>
            <column name="comment"
                    type="VARCHAR(255)"/>
            <column name="rating"
                    type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ride_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="deleted"
                    type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="2"
               author="vanz">
        <createTable tableName="passenger_rating">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_passengerrating"/>
            </column>
            <column name="comment"
                    type="VARCHAR(255)"/>
            <column name="rating"
                    type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="ride_id"
                    type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="deleted"
                    type="BOOLEAN"/>
        </createTable>
    </changeSet>
    <changeSet id="3"
               author="vanz">
        <addUniqueConstraint columnNames="ride_id"
                             constraintName="uc_driverrating_rideid"
                             tableName="driver_rating"/>
    </changeSet>
    <changeSet id="4"
               author="vanz">
        <addUniqueConstraint columnNames="ride_id"
                             constraintName="uc_passengerrating_rideid"
                             tableName="passenger_rating"/>
    </changeSet>

</databaseChangeLog>