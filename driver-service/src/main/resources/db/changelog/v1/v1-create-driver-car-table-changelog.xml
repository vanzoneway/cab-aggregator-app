<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1727686241411-1"
               author="vanzoneway">
        <createTable tableName="car">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_car"/>
            </column>
            <column name="brand"
                    type="VARCHAR(255)"/>
            <column name="color"
                    type="VARCHAR(255)"/>
            <column name="number"
                    type="VARCHAR(255)"/>
            <column name="model"
                    type="VARCHAR(255)"/>
            <column name="year"
                    type="INT"/>
            <column name="deleted"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="driver_id"
                    type="BIGINT"/>
        </createTable>
        <rollback>
            <dropTable tableName="car"/>
        </rollback>
    </changeSet>

    <changeSet id="1727686241411-2"
               author="vanzoneway">
        <createTable tableName="driver">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_driver"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)"/>
            <column name="email"
                    type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone"
                    type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="age"
                    type="INT"/>
            <column name="gender"
                    type="VARCHAR(255)"/>
            <column name="deleted"
                    type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="driver"/>
        </rollback>
    </changeSet>

    <changeSet id="1727686241411-3"
               author="vanzoneway">
        <addUniqueConstraint columnNames="number"
                             constraintName="uc_car_number"
                             tableName="car"/>
        <rollback>
            <dropUniqueConstraint constraintName="uc_car_number" tableName="car"/>
        </rollback>
    </changeSet>

    <changeSet id="1727686241411-4"
               author="vanzoneway">
        <addForeignKeyConstraint baseColumnNames="driver_id"
                                 baseTableName="car"
                                 constraintName="FK_CAR_ON_DRIVER"
                                 referencedColumnNames="id"
                                 referencedTableName="driver"/>
        <rollback>
            <dropForeignKeyConstraint constraintName="FK_CAR_ON_DRIVER" baseTableName="car"/>
        </rollback>
    </changeSet>

</databaseChangeLog>