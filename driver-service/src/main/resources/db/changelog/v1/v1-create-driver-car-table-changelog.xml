<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="1727622763004-1"
               author="vanz">
        <createTable tableName="car">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_car"/>
            </column>
            <column name="brand"
                    type="VARCHAR(255)"/>
            <column name="color"
                    type="VARCHAR(255)"/>
            <column name="number"
                    type="VARCHAR(255)"/>
            <column name="model"
                    type="VARCHAR(255)"/>
            <column name="year"
                    type="INT"/>
            <column name="driver_id"
                    type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1727622763004-2"
               author="vanz">
        <createTable tableName="driver">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_driver"/>
            </column>
            <column name="name"
                    type="VARCHAR(255)"/>
            <column name="email"
                    type="VARCHAR(255)"/>
            <column name="phone"
                    type="VARCHAR(255)"/>
            <column name="age"
                    type="INT"/>
            <column name="gender"
                    type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1727622763004-3"
               author="vanz">
        <addForeignKeyConstraint baseColumnNames="driver_id"
                                 baseTableName="car"
                                 constraintName="FK_CAR_ON_DRIVER"
                                 referencedColumnNames="id"
                                 referencedTableName="driver"/>
    </changeSet>

</databaseChangeLog>